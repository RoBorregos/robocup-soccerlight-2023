#include <Servo.h>

Servo esc; // create a Servo object for the ESC

void setup() {
  Serial.begin(9600);
  pinMode(A4, INPUT);
  esc.attach(7); // attach the ESC signal wire to pin 9
  delay(2000);
  esc.writeMicroseconds(700); // set the motor speed to minimum
  delay(2000); // wait for 3 seconds
}

